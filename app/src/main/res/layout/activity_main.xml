<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageButton
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_above="@+id/inputCityName"
        android:layout_centerInParent="true"
        android:layout_marginBottom="135dp"
        android:background="@drawable/backtitle"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subTitle"
        android:layout_centerHorizontal="true"
        android:text="WeatherClear"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputCityName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:text="CHILE"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/inputCityName"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:hint="Search..."
        android:textColorHint="@color/black" />


    <ImageButton
        android:id="@+id/search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/buscador"
        android:layout_toRightOf="@+id/inputCityName"
        android:layout_marginBottom="135dp"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/back"
        android:layout_below="@+id/inputCityName"
        android:layout_centerHorizontal="true"
        >
    </ImageButton>

    <Button
        android:id="@+id/chillanButton"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/inputCityName"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Chillán"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/back"
        android:layout_below="@+id/chillanButton"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/concepcionButton"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/chillanButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="Concepción"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/back"
        android:layout_below="@+id/concepcionButton"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/santiagoButton"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/concepcionButton"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:text="Santiago" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/backbutstone"
        android:layout_below="@+id/santiagoButton"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/gpsButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/santiagoButton"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:text="GPS" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bruj"
        android:layout_below="@id/santiagoButton"
        android:layout_toRightOf="@id/gpsButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_centerInParent="true"
        />
</RelativeLayout>